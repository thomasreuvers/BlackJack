<Window x:Class="BlackJack.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack.Windows"
        mc:Ignorable="d"
        Title="Blackjack by Thomas" Height="450" Width="320" ResizeMode="NoResize" SizeToContent="Manual">
    <Grid>
        <Grid>
            <Image Source="../Resources/StartmenuBackground.jpg" Stretch="UniformToFill" StretchDirection="DownOnly"/>
        </Grid>
        <StackPanel VerticalAlignment="Center" Margin="10, 0, 10, 0">
            <Button Margin="10" Click="StartBtn_Click">Start</Button>
            <Button Margin="10">Credits</Button>
            <Button Margin="10" Click="QuitBtn_Click">Quit</Button>
        </StackPanel>
    </Grid>
</Window>
